<%= form_with model: exercise, class: "flex flex-col" do |f| %>
  <fieldset class="fieldset flex">
    <%= f.text_field :name, class: "input flex-1", placeholder: t(".example_name") %>
  </fieldset>

  <fieldset class="fieldset flex">
    <%= f.submit t(".submit"), class: "btn flex-1" %>
  </fieldset>
<% end %>
